---
import { getCharacterImageUrl, getPlaceholderImage, extractIdFromUrl } from '../services/imageService';

export interface Props {
  character: {
    name: string;
    height: string;
    mass: string;
    hair_color: string;
    skin_color: string;
    eye_color: string;
    birth_year: string;
    gender: string;
    url: string;
  };
}

const { character } = Astro.props;
const swapiId = extractIdFromUrl(character.url);
const imageUrl = getCharacterImageUrl(swapiId);
const placeholderUrl = getPlaceholderImage();
---

<a href={`/character/${swapiId}`} class="card-link">
  <div class="card">
    <h3>{character.name}</h3>
    <div class="card-content">
      <div class="character-image">
        <img 
          src={imageUrl} 
          alt={`Image of ${character.name}`}
          onerror={`this.onerror=null; this.src='${placeholderUrl}'`}
        />
      </div>
      <div class="info">
        <p><span>Height:</span> {character.height !== "unknown" ? `${character.height} cm` : "Unknown"}</p>
        <p><span>Mass:</span> {character.mass !== "unknown" ? `${character.mass} kg` : "Unknown"}</p>
        <p><span>Hair:</span> {character.hair_color}</p>
        <p><span>Skin:</span> {character.skin_color}</p>
        <p><span>Eyes:</span> {character.eye_color}</p>
        <p><span>Birth Year:</span> {character.birth_year}</p>
        <p><span>Gender:</span> {character.gender}</p>
      </div>
    </div>
    <div class="view-details">
      <span class="detail-text">View Details</span>
      <span class="arrow">â†’</span>
    </div>
  </div>
</a>

<style>
  .card-link {
    text-decoration: none;
    color: var(--color-text-main);
    display: block;
    height: 100%;
  }

  .card {
    background-color: var(--color-background-light);
    border-radius: 8px;
    box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
    padding: 1.5rem;
    transition: transform 0.2s ease, box-shadow 0.2s ease;
    height: 100%;
    display: flex;
    flex-direction: column;
  }

  .card:hover {
    transform: translateY(-5px);
    box-shadow: 0 6px 8px rgba(0, 0, 0, 0.15);
  }

  .card:hover .arrow {
    transform: translateX(5px);
  }

  .card h3 {
    margin-top: 0;
    color: var(--color-accent);
    border-bottom: 2px solid var(--color-accent-light);
    padding-bottom: 0.5rem;
  }

  .card-content {
    display: flex;
    flex-direction: column;
    align-items: center;
    flex: 1;
  }

  .character-image {
    margin-bottom: 1rem;
    width: 120px;
    height: 120px;
    overflow: hidden;
    border-radius: 8px;
    border: 2px solid var(--color-accent-light);
  }

  .character-image img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform 0.3s ease;
  }

  .character-image img:hover {
    transform: scale(1.05);
  }

  .info {
    width: 100%;
  }

  .info p {
    margin: 0.5rem 0;
    display: flex;
    justify-content: space-between;
  }

  .info span {
    font-weight: bold;
    color: var(--color-text-muted);
  }

  .view-details {
    margin-top: 1rem;
    text-align: right;
    color: var(--color-accent);
    font-weight: bold;
    display: flex;
    justify-content: flex-end;
    align-items: center;
    gap: 0.5rem;
  }

  .arrow {
    transition: transform 0.3s ease;
  }

  @media (min-width: 768px) {
    .card-content {
      flex-direction: row;
      align-items: flex-start;
    }

    .character-image {
      margin-right: 1.5rem;
      margin-bottom: 0;
    }
  }
</style>
