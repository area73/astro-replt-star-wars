---
export interface Props {
  starship: {
    name: string;
    model: string;
    manufacturer: string;
    cost_in_credits: string;
    length: string;
    max_atmosphering_speed: string;
    crew: string;
    passengers: string;
    cargo_capacity: string;
    consumables: string;
    hyperdrive_rating: string;
    MGLT: string;
    starship_class: string;
    url: string;
  };
}

const { starship } = Astro.props;
const starshipId = starship.url.split('/').filter(Boolean).pop();
---

<div class="card">
  <h3>{starship.name}</h3>
  <div class="card-content">
    <div class="starship-icon">
      <svg xmlns="http://www.w3.org/2000/svg" width="64" height="64" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
        <path d="M22 16.92v3a1.998 1.998 0 0 1-2.18 2 19.794 19.794 0 0 1-8.63-3.07 19.5 19.5 0 0 1-6-6 19.8 19.8 0 0 1-3.07-8.67A2 2 0 0 1 4.11 2h3a2 2 0 0 1 2 1.72c.127.96.362 1.903.7 2.81a2 2 0 0 1-.45 2.11L8.09 9.91a16.001 16.001 0 0 0 6 6l1.27-1.27a2 2 0 0 1 2.11-.45c.908.339 1.85.574 2.81.7A2 2 0 0 1 22 16.92z"></path>
      </svg>
    </div>
    <div class="info">
      <p><span>Model:</span> {starship.model}</p>
      <p><span>Manufacturer:</span> {starship.manufacturer}</p>
      <p><span>Cost:</span> {starship.cost_in_credits !== "unknown" ? `${Number(starship.cost_in_credits).toLocaleString()} credits` : "Unknown"}</p>
      <p><span>Length:</span> {starship.length !== "unknown" ? `${starship.length} m` : "Unknown"}</p>
      <p><span>Max Speed:</span> {starship.max_atmosphering_speed}</p>
      <p><span>Crew:</span> {starship.crew}</p>
      <p><span>Passengers:</span> {starship.passengers}</p>
      <p><span>Cargo Capacity:</span> {starship.cargo_capacity !== "unknown" ? `${Number(starship.cargo_capacity).toLocaleString()} kg` : "Unknown"}</p>
      <p><span>Consumables:</span> {starship.consumables}</p>
      <p><span>Hyperdrive Rating:</span> {starship.hyperdrive_rating}</p>
      <p><span>MGLT:</span> {starship.MGLT}</p>
      <p><span>Class:</span> {starship.starship_class}</p>
    </div>
  </div>
</div>

<style>
  .card {
    background-color: var(--color-background-light);
    border-radius: 8px;
    box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
    padding: 1.5rem;
    transition: transform 0.2s ease, box-shadow 0.2s ease;
    height: 100%;
  }

  .card:hover {
    transform: translateY(-5px);
    box-shadow: 0 6px 8px rgba(0, 0, 0, 0.15);
  }

  .card h3 {
    margin-top: 0;
    color: var(--color-accent);
    border-bottom: 2px solid var(--color-accent-light);
    padding-bottom: 0.5rem;
  }

  .card-content {
    display: flex;
    flex-direction: column;
    align-items: center;
  }

  .starship-icon {
    margin-bottom: 1rem;
    color: var(--color-accent);
  }

  .info {
    width: 100%;
  }

  .info p {
    margin: 0.5rem 0;
    display: flex;
    justify-content: space-between;
    flex-wrap: wrap;
  }

  .info span {
    font-weight: bold;
    color: var(--color-text-muted);
  }

  @media (min-width: 768px) {
    .card-content {
      flex-direction: row;
      align-items: flex-start;
    }

    .starship-icon {
      margin-right: 1.5rem;
      margin-bottom: 0;
    }
  }
</style>
