---
import { getStarshipImageUrl, getPlaceholderImage } from '../services/imageService';

export interface Props {
  starship: {
    name: string;
    model: string;
    manufacturer: string;
    cost_in_credits: string;
    length: string;
    max_atmosphering_speed: string;
    crew: string;
    passengers: string;
    cargo_capacity: string;
    consumables: string;
    hyperdrive_rating: string;
    MGLT: string;
    starship_class: string;
    url: string;
  };
}

const { starship } = Astro.props;
const starshipId = starship.url.split('/').filter(Boolean).pop();
const imageUrl = getStarshipImageUrl(starshipId);
const placeholderUrl = getPlaceholderImage('starship');
---

<a href={`/starship/${starshipId}`} class="card-link">
  <div class="card">
    <h3>{starship.name}</h3>
    <div class="card-content">
      <div class="starship-image">
        <img 
          src={imageUrl} 
          alt={`Image of ${starship.name}`}
          onerror={`this.onerror=null; this.src='${placeholderUrl}'`}
        />
      </div>
      <div class="info">
        <p><span>Model:</span> {starship.model}</p>
        <p><span>Manufacturer:</span> {starship.manufacturer}</p>
        <p><span>Cost:</span> {starship.cost_in_credits !== "unknown" ? `${Number(starship.cost_in_credits).toLocaleString()} credits` : "Unknown"}</p>
        <p><span>Length:</span> {starship.length !== "unknown" ? `${starship.length} m` : "Unknown"}</p>
        <p><span>Crew/Passengers:</span> {starship.crew} / {starship.passengers}</p>
        <p><span>Class:</span> {starship.starship_class}</p>
        <p><span>Hyperdrive Rating:</span> {starship.hyperdrive_rating}</p>
      </div>
    </div>
    <div class="view-details">
      <span class="view-details-text">View Details â†’</span>
    </div>
  </div>
</a>

<style>
  .card-link {
    display: block;
    text-decoration: none;
    color: inherit;
    height: 100%;
  }

  .card {
    background-color: var(--color-background-light);
    border-radius: 8px;
    box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
    padding: 1.5rem;
    transition: transform 0.2s ease, box-shadow 0.2s ease;
    height: 100%;
  }

  .card:hover {
    transform: translateY(-5px);
    box-shadow: 0 6px 8px rgba(0, 0, 0, 0.15);
  }

  .card h3 {
    margin-top: 0;
    color: var(--color-accent);
    border-bottom: 2px solid var(--color-accent-light);
    padding-bottom: 0.5rem;
  }

  .card-content {
    display: flex;
    flex-direction: column;
    align-items: center;
  }

  .starship-image {
    margin-bottom: 1rem;
    width: 100%;
    max-width: 200px;
  }
  
  .starship-image img {
    width: 100%;
    height: auto;
    border-radius: 8px;
    border: 2px solid var(--color-accent-light);
    aspect-ratio: 16/9;
    object-fit: cover;
  }

  .info {
    width: 100%;
  }

  .info p {
    margin: 0.5rem 0;
    display: flex;
    justify-content: space-between;
    flex-wrap: wrap;
  }

  .info span {
    font-weight: bold;
    color: var(--color-text-muted);
  }

  .view-details {
    margin-top: 1rem;
    text-align: right;
  }
  
  .view-details-text {
    display: inline-block;
    color: var(--color-accent);
    font-weight: 500;
    transition: transform 0.2s ease;
  }
  
  .card:hover .view-details-text {
    transform: translateX(5px);
  }

  @media (min-width: 768px) {
    .card-content {
      flex-direction: row;
      align-items: flex-start;
    }

    .starship-image {
      flex: 0 0 150px;
      margin-right: 1.5rem;
      margin-bottom: 0;
    }
    
    .info {
      flex: 1;
    }
  }
</style>
